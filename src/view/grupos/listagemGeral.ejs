<%- include('../includes/head') %>

<body>
    <%- include('../includes/navbar') %>
    <h1 class="titulo">TODOS OS GRUPOS</h1>
    <div class="w3-container" style="padding-left: 10%; padding-right: 10%;">
        <table class="w3-table w3-bordered w3-border w3-hoverable">
                    <thead style="color: #403866c5">
                        <tr>
                            <th>NOME DO GRUPO</th>
                            <th>QUANTIDADE DE MEMBROS</th>
                        </tr>
                    </thead>
                    <% grupos.forEach(grupo=> { %>
                        <tr>
                            <td>
                                <%= grupo.nome %>
                            </td>
                            <td>
                                <%= grupo.membros %>
                            </td>
                        </tr>
                    <% }) %>    
        </table>

    </div>
    <%- include('../includes/footer') %>
</body>